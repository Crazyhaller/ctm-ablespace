{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma.config.ts",
    "jest.config.ts",
    "tests",
    "src/tests",
    "src/tests/**",
    "src/**/__mocks__/**",
    "**/*.test.ts"
  ]
}
