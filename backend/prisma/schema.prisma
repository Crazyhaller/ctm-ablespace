generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  COMPLETED
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  createdTasks  Task[] @relation("TaskCreator")
  assignedTasks Task[] @relation("TaskAssignee")
}

model Task {
  id            String       @id @default(uuid())
  title         String
  description   String
  dueDate       DateTime
  priority      TaskPriority
  status        TaskStatus   @default(TODO)

  creatorId     String
  assignedToId  String?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  creator   User @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  assignee  User? @relation("TaskAssignee", fields: [assignedToId], references: [id], onDelete: SetNull)

  @@index([creatorId])
  @@index([assignedToId])
  @@index([status])
  @@index([priority])
  @@index([dueDate])
}